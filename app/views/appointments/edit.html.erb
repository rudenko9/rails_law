<h1> Change Appointment </h1>
<%= render partial: 'errors_form' %>

<%= form_for @appointment, url: user_appointments_path(@appointment.user_id, @appointment) do |f|%>
<%= f.hidden_field :user_id, value: current_user.id %>

<%= f.label :user %>
<%= f.collection_select :user_id, current_user.user, :name, :id  %>
<br>
<br>
<%= f.label :hair_stylist %>
<%= f.select :hair_stylist, HairStylist.stylist_namess %>
<br>
<br>
<%= f.label :hairstyle %>
<%= f.select :hairstyle, Appointment.hairstyle %>
<br>
<br>
<%= f.label :date_time %>
<%= f.datetime_select :date_time %>
<br>
<br>
<%= f.submit  %>
<br>
<br>

<% end  %>
