<h1> You can schedule your New Appointment here </h1>
<%= render partial: 'errors_form' %>

<%= form_for @appointment, url: user_appointments_path(@appointment.user_id) do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<p><b> Appointment for: </b> <%= @appointment.user.email %> </p>

<br>
<%= f.label :hair_stylist %>
<%= f.collection_select :hair_stylist_id, HairStylist.all, :id, :name%>
<br>
<br>
<%= f.label :hairstyle %>
<%= f.select :hairstyle, Appointment.style_names %>
<br>
<br>
<%= f.label :date_time %>
<%= f.datetime_select :date_time %>
<br>
<br>
<%= f.submit  %>
<br>
<br>

<% end  %>
